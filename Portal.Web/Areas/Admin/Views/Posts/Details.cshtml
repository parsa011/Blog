@model Portal.Common.ViewModels.Posts.PostDetailsViewModel
@using Portal.Common.Extention;
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>جزئیات</h1>

<div>
    <h4>مطلب</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Image" width="150" height="100" />
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Content)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ViewCount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ViewCount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedDate.ToPersianDateString()
        </dd>
    </dl>
</div>
<div>
    <a href="/Admin/Posts/Edit/@Model.Id">ویرایش</a> |
    <a href="/Admin/Posts/Delete/@Model.Id" class="btnDelete">حذف</a> |
    <a href="/Admin/Posts/Index">بازگشت</a>
</div>

@section Scripts{
    <script>
        $('.btnDelete').click(function () {
            confirm("ایا از حذف مطمئن هستید ؟");
        });
    </script>
}