@model Portal.Domain.Entities.Users
@using Portal.Common.Extention
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>جزئیات</h1>

<div>
    <h4>کاربر</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            نام کامل
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            نام کاربری
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            ایمیل
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            کد فعالسازی
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ActiveCode)
        </dd>
        <dt class = "col-sm-2">
            فعال؟
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            نقش
        </dt>
        <dd class = "col-sm-10">
            @{
                if (Model.RoleId == 1)
                {
                    <span>ادمین</span>
                }
                else
                {
                    <span>کاربر</span>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            ایدی
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            تاریخ ساخت
        </dt>
        <dd class = "col-sm-10">
            @Model.CreatedTime.ToPersianDateString()
        </dd>
        <dt class = "col-sm-2">
            تاریخ اخرین تغییر
        </dt>
        <dd class = "col-sm-10">
            @Model.LastModifyTime.ToPersianDateString()
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("ویرایش", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a href="/Admin/Users/Index">برگشت به صفحه اصلی</a>
</div>