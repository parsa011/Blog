@model IEnumerable<Portal.Domain.Entities.Users>
@using Portal.Common.Extention;

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>کاربران</h3>

<table class="table table-hover table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                نام کامل
            </th>
            <th>
                نام کاربری
            </th>
            <th>
                ایمیل
            </th>
            <th>
                فعال؟
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastModifyTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @item.CreatedTime.Date.ToPersianDateString()
                   
                </td>
                <td>
                    @item.LastModifyTime.Date.ToPersianDateString()
                        
                </td>
                <td>
                    @Html.ActionLink("جزئیات", "Details", new { id=item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
