
@{
    Layout = null;
}

@model Portal.Common.ViewModels.Account.RegisterViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>ثبت نام</title>
    <!--login styles-->
    <link href="~/css/Login.css" rel="stylesheet" type="text/css" />
    <!--reset style for reset css default styles-->
    <link href="~/css/reset.css" rel="stylesheet" type="text/css" />
    <!--Bootstrap rtl styles-->
    <link href="~/Lib/Bootstrap/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <!--font awesome-->
    <link href="~/css/FontAweSome.css" rel="stylesheet" />
</head>

<body class="app flex-row align-items-center text-right">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="register" asp-controller="auth" method="post" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card-group">
                        <div class="card p-4">
                            <div class="card-body text-left">
                                <h1>حساب کاربری</h1>

                                <p class="text-muted">ساخت حساب کاربری</p>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-user-alt"></i></span>
                                    </div>
                                    <input asp-for="Username" type="text" class="form-control bg-white" placeholder="نام کاربری">
                                    <div class="invalid-feedback d-block">
                                        <span asp-validation-for="Username"></span>
                                    </div>
                                </div>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-user-alt"></i></span>
                                    </div>
                                    <input asp-for="FullName" type="text" class="form-control bg-white" placeholder="نام">
                                    <div class="invalid-feedback d-block">
                                        <span asp-validation-for="FullName"></span>
                                    </div>
                                </div>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-mail-bulk"></i></span>
                                    </div>
                                    <input asp-for="Email" type="text" class="form-control bg-white" placeholder="ایمیل">
                                    <div class="invalid-feedback d-block">
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>

                                <div class="input-group mb-4">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-lock-alt"></i></span>
                                    </div>
                                    <input asp-for="Password" type="password" class="form-control bg-white" placeholder="رمز عبور">
                                    <div class="invalid-feedback d-block">
                                        <span asp-validation-for="Password"></span>
                                    </div>
                                </div>

                                <div class="input-group mb-4">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="fa fa-lock-alt"></i></span>
                                    </div>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control bg-white" placeholder=" تکرار رمز عبور">
                                    <div class="invalid-feedback d-block">
                                        <span asp-validation-for="ConfirmPassword"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6 p-0">
                                        <button type="submit" class="btn btn-primary px-4 float-right">ساخت حساب</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>