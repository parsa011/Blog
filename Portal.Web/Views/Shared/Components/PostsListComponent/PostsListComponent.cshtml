@model List<Portal.Common.ViewModels.Posts.PostsListViewModel>
@using Portal.Common.Extention
@{
    Layout = null;
}

    <div class="row">
        <div class="col-lg-12 text-white page-title">
            <span>
                مطالب
            </span>
        </div>
        <!--card deck-->
        <div class="col-lg-12">
            <div class="card-columns p-0">
                @foreach (var item in Model)
                {
                    <div class="card">
                        <img src="@item.Image" class="card-img-top" alt="@item.Title">
                        <div class="card-body text-justify">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">
                               @item.Summary
                            </p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">
                                در @item.CreatedTime.ToPersianDateString()
                            </small>
                            <a href="/Home/Details/@item.Id" class="float-left">بیشتر ...</a>
                        </div>
                    </div>
                }
            </div>


        </div>
        <!--end card deck-->
    </div>